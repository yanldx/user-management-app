{
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": ["api/**", "vercel-build.sh"],
                "buildCommand": "bash vercel-build.sh"
            }
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "api/index.py" }
    ]
}
